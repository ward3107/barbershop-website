# Firebase Configuration
# Get these values from: Firebase Console > Project Settings > General > Your apps > Web app
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Twilio Configuration (optional - for WhatsApp/SMS)
# ⚠️ SECURITY WARNING: Move these to backend! Never expose auth tokens client-side!
VITE_TWILIO_ACCOUNT_SID=your_twilio_account_sid
VITE_TWILIO_AUTH_TOKEN=your_twilio_auth_token
VITE_TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Owner Contact Information
VITE_OWNER_WHATSAPP=972XXXXXXXXX
VITE_OWNER_PHONE=972XXXXXXXXX

# Make.com Webhook (optional)
VITE_MAKE_WEBHOOK_URL=your_make_webhook_url

# Telegram Bot (optional)
VITE_TELEGRAM_BOT_TOKEN=your_telegram_bot_token
VITE_TELEGRAM_CHAT_ID=your_telegram_chat_id

# EmailJS Configuration (optional)
VITE_EMAILJS_SERVICE_ID=your_emailjs_service_id
VITE_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
VITE_EMAILJS_USER_ID=your_emailjs_user_id
VITE_OWNER_EMAIL=owner@shokhabarbershop.com

# HCaptcha (optional - for bot protection)
VITE_HCAPTCHA_SITE_KEY=your_hcaptcha_site_key

# Webhook Security (for api/webhook.js)
# Generate a random 32+ character string for production
# Example: openssl rand -hex 32
WEBHOOK_SECRET=your_webhook_secret_here
